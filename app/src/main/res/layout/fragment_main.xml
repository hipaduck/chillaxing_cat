<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <import type="com.peopleofandroido.chillaxingcat.presentation.enums.TodayStatus" />
        <variable
            name="vm"
            type="com.peopleofandroido.chillaxingcat.presentation.viewmodel.MainMenuViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.MainMenuFragment"
        android:orientation="vertical"
        android:gravity="center"
        style="@style/Theme.ChillaxingCat.FragmentBackground">
        <ImageView
            android:id="@+id/iv_main_cat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:imgRes="@{vm.catStatus.symbolImageDrawable}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/tv_main_public_holiday_remains_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:text="@{vm == null ? @string/label_loading : @string/label_public_holiday}"
            tools:text="@string/label_public_holiday"
            />
        <TextView
            android:id="@+id/tv_main_public_holiday_remains_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_main_public_holiday_remains_label"
            app:layout_constraintTop_toTopOf="@+id/tv_main_public_holiday_remains_label"
            android:textSize="16sp"
            android:text="@{vm == null ? @string/label_loading : @string/text_present_decimal_date(vm.holidayDDayFromToday)}"
            tools:text="D-100"
            />
        <!--
        <TextView
            android:id="@+id/tv_main_personal_holiday_remains_label"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tv_main_public_holiday_remains_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_main_public_holiday_remains_label"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:text="내 휴일"
            tools:text="내 휴일"
            />
        <TextView
            android:id="@+id/tv_main_personal_holiday_remains_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/tv_main_personal_holiday_remains_label"
            app:layout_constraintTop_toTopOf="@+id/tv_main_personal_holiday_remains_label"
            android:textSize="16sp"
            tools:text="D-123"
            />
            -->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/setting"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:onClick="@{()->vm.moveToSetting()}"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/calendar_layout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:onClick="@{()->vm.moveToCalendar()}">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/calendar"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="달력"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/go_work_layout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="@{()->vm.startResting()}"
            android:layout_margin="16dp"
            android:visibility="@{vm.catStatus == TodayStatus.Normal ? View.VISIBLE : View.GONE}">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/resting_start"
                app:tint="@color/black" 
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_rest_start"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/go_home_layout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="@{()->vm.resumeResting()}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:visibility="@{vm.catStatus == TodayStatus.Pause ? View.VISIBLE : View.GONE}">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/resting_resume"
                app:tint="@color/black"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/main_rest_resume"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/pause_layout"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="@{()->vm.pauseResting()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                android:visibility="@{vm.catStatus == TodayStatus.Rest ? View.VISIBLE : View.GONE}">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/resting_pause"
                    app:tint="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_rest_pause"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/stop_layout"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:onClick="@{()->vm.stopResting()}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="16dp"
                android:visibility="@{vm.catStatus == TodayStatus.Normal ? View.GONE : View.VISIBLE}">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/resting_stop"
                    app:tint="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/main_rest_stop"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
