<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="vm"
            type="com.peopleofandroido.chillaxingcat.presentation.viewmodel.SettingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.SettingFragment">
        <include
            android:id="@+id/setting_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="1dp"
            layout="@layout/toolbar_basic" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_cat_job_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_toolbar"
            android:layout_margin="16dp"
            android:background="@drawable/line_square_round_corner"
            android:padding="16dp"
            android:onClick="@{() -> vm.showJobSettingDialog()}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="고양이 직업"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_work_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_cat_job_layout"
            android:layout_margin="16dp"
            android:background="@drawable/line_square_round_corner"
            android:padding="16dp"
            android:onClick="@{() -> vm.showTimeSettingDialog()}">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="기준 출/퇴근 시간 조정"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_push_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/setting_work_time_layout"
            android:layout_margin="16dp"
            android:background="@drawable/line_square_round_corner"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="푸시 설정"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@drawable/right_arrow"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent">
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/check"
                app:tint="@color/accentNormal" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>